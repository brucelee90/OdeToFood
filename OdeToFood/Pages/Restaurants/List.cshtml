@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>
    Restaurants
</h1>

<form>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search for restaurant" asp-for="SearchTerm" name="searchTerm" >
        <div class="input-group-append">
            <button class="btn btn-primary">
                <i class="bi bi-search"></i>
                Search
            </button>
        </div>
    </div>

</form>

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Location</td>
                <td>@restaurant.Cuisine</td>
                <td>
                    <a class="btn btn-lg"
                       asp-page="./Detail"
                       asp-route-restaurantId="@restaurant.Id" >
                       Detail
                        <i class="glyphicon glyphicon-zoom-in" />
                    </a>
                </td>
            </tr>
         }
</table>


<div>
    @Model.Message
</div>